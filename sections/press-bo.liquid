{% if section.settings.enabled %} 
	{% if section.blocks.size > 0 %}
		<section class="press"> 
			{% if section.settings.title != blank and section.settings.title != '' %}
				<h3>{{ section.settings.title }}</h3>
			{% endif %}
			<div class="press-wrapper"> 
				{% for block in section.blocks %} 
					<a class="logo" style="background-image: url({{ block.settings.image | img_url: '300x' }}); width: {{ block.settings.size_w }}%; height: {{ block.settings.size_h }}rem;" {% if block.settings.link !=blank and block.settings.link !='' %}href="{{ block.settings.link }}" target="_blank"{% endif %}>{% if block.settings.alt_text != blank %}<span class="visually-hidden">{{ block.settings.alt_text }}</span>{% endif %}</a> 
				{% endfor %}
			</div>
		</section> 
	{% endif %} 
{% endif %} 

{% schema %} 
{
   "name":"Press - Minimal",
   "max_blocks":20,
   "settings":[
      {
         "type":"text",
         "id":"title",
         "label":"Section Title"
      },
      {
         "type":"checkbox",
         "id":"enabled",
         "label":"Enable Press Section",
         "default":false
      }
   ],
   "blocks":[
      {
         "type":"image",
         "name":"Image",
         "settings":[
            {
               "type":"image_picker",
               "id":"image",
               "label":"Image"
            },
            {
               "type":"range",
               "id":"size_w",
               "min":0,
               "max":100,
               "step":1,
               "label":"Percent Width",
               "default":12
            },
            {
               "type":"range",
               "id":"size_h",
               "min":0,
               "max":10,
               "step":0.1,
               "label":"Height (rems)",
               "default":2
            },
            {
               "type":"url",
               "id":"link",
               "label":"Article Link"
            },
            {
               "type":"text",
               "id":"alt_text",
               "label":"Alt Text"
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"Press - Minimal",
         "category":"Custom Content",
         "settings":{

         },
         "blocks":[
            {
               "type":"image"
            }
         ]
      }
   ]
}
{% endschema %}