<section id="section-{{ section.id }}-{{ section.settings.variation }}" class="lp-section-variant{% if section.settings.visibility == 'mobile' %} visibility__mobile-only{% endif %}{% if section.settings.visibility == 'desktop' %} visibility__desktop-only{% endif %}" data-section-id="{{ section.id }}" data-variation="{{ section.settings.variation }}" data-title="{{ section.settings.title | escape }}">
    <div class="hp-text-image">
        <div class="hp-text-image__background">
            {% if section.settings.image_desktop %}
                {%- include 'image-size', sizes: '800,900,1000,1200,1400,1600,1800,2000,2400', image: section.settings.image_desktop -%}
                {%- assign image_url_mobile = section.settings.image_desktop | img_url: '14x5' -%}
                <img class="lazyload-img banner-background desktop " loading="lazy"
                    src="{{ image_url_mobile }}" 
                    data-src="{{ image_url_mobile }}"
                    data-widths="[{{ supported_sizes }}]"
                    sizes="50vw"
                    srcset="{{ image_srcset }}"
                    alt="{{ section.settings.image_desktop.alt | default: page.title | escape }}">

                <noscript>
                    <img class="desktop" src="{{ section.settings.image_desktop | img_url: '1024x1024' }}" alt="{{ section.settings.image_desktop.alt | default: page.title | escape }}">
                </noscript>

                {% if section.settings.video_desktop_url != blank %}
                    {% assign aspect_ratio_desktop = section.settings.image_desktop.aspect_ratio %}
                    <div class="banner-background banner-background__video desktop" {% if aspect_ratio_desktop != blank %}style="padding-bottom: {{ 1.00 | divided_by: aspect_ratio_desktop | times: 100 }}%;"{% endif %}>
                        <iframe 
                          id="video-{{ section.id }}-d"
                          class="banner-background__video-iframe lazy-video"
                          src="{{ section.settings.video_desktop_url.id | prepend: 'https://player.vimeo.com/video/' | append: "?autoplay=1&loop=1&background=1&mute=0" }}"
                          webkitAllowFullScreen mozallowfullscreen allowFullScreen frameborder="0"
                          allow="autoplay; fullscreen"
                          loading="lazy">
                        </iframe>
                    </div>
                {% endif %}
            {% endif %}


            {% if section.settings.image_mobile %}
                {%- include 'image-size', sizes: '200,400,600,700,800,900,1000,1200', image: section.settings.image_mobile -%}
                {%- assign image_url_desktop  = section.settings.image_mobile | img_url: '4x5' -%}
                <img class="lazyload-img banner-background mobile " loading="lazy"
                    src="{{ image_url_desktop }}" 
                    data-src="{{ image_url_desktop }}"
                    data-widths="[{{ supported_sizes }}]"
                    sizes="100vw"
                    srcset="{{ image_srcset }}"
                    alt="{{ section.settings.image_mobile.alt | default: page.title | escape }}">

                <noscript>
                    <img class="mobile" src="{{ section.settings.image_mobile | img_url: '1024x1024' }}" alt="{{ section.settings.image_mobile.alt | default: page.title | escape }}">
                </noscript>
                
                {% if section.settings.video_mobile_url != blank %}
                    {% assign aspect_ratio_mobile = section.settings.image_mobile.aspect_ratio %}
                    <div class="banner-background banner-background__video mobile" {% if aspect_ratio_mobile != blank %}style="padding-bottom: {{ 1.00 | divided_by: aspect_ratio_mobile | times: 100 }}%;"{% endif %}>
                        <iframe 
                          id="video-{{ section.id }}-m"
                          class="banner-background__video-iframe lazy-video"
                          src="{{ section.settings.video_mobile_url.id | prepend: 'https://player.vimeo.com/video/' | append: "?autoplay=1&loop=1&background=1&mute=0" }}"
                          webkitAllowFullScreen mozallowfullscreen allowFullScreen frameborder="0"
                          allow="autoplay; fullscreen"
                          loading="lazy">
                        </iframe>
                    </div>
                {% endif %}
            {% endif %}
            <style>
                #shopify-section-{{ section.id }} .hp-text-image__background {
                    background-color: {{ section.settings.background_color_mobile }};
                }
                @media (min-width: 700px) {
                    #shopify-section-{{ section.id }} .hp-text-image__background {
                        background-color: {{ section.settings.background_color_desktop }};
                    }
                }
            </style>
        </div>
