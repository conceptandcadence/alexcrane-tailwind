<div class="column">
    <div class="prompt">Or make an account</div>
{% form 'create_customer' %}

  <input type="text"
    name="customer[first_name]"
    id="FirstName"
    class="{% if form.errors contains 'first_name' %}input-error{% endif %}"
    placeholder="{{ 'customer.register.first_name' | t }}"
    spellcheck="false"
    autocomplete="off"
    autocapitalize="off">

  <input type="text"
    name="customer[last_name]"
    id="LastName"
    class="{% if form.errors contains 'last_name' %}input-error{% endif %}"
    placeholder="{{ 'customer.register.last_name' | t }}"
    spellcheck="false"
    autocomplete="off"
    autocapitalize="off">

  <input type="email"
    name="customer[email]"
    id="Email"
    class="{% if form.errors contains 'email' %}input-error{% endif %}"
    placeholder="{{ 'customer.register.email' | t }}"
    value="{% if form.email %}{{ form.email }}{% endif %}"
    spellcheck="false"
    autocomplete="off"
    autocapitalize="off">

  <input type="tel"
    name="customer[phone]"
    id="Phone"
    class="{% if form.errors contains 'phone' %}input-error{% endif %}"
    placeholder="{{ 'customer.addresses.phone' | t }}"
    value="{% if form.phone %}{{ form.phone }}{% endif %}"
    autocomplete="off"
    autocapitalize="off">

  <input type="password"
    name="customer[password]"
    id="CreatePassword"
    class="{% if form.errors contains 'password' %}input-error{% endif %}"
    placeholder="{{ 'customer.register.password' | t }}">


    <p><a id="CreateAccount" href="{{ shop.url }}/account/login">{{ 'customer.register.go_to_login' | t }}</a></p>

  <p>
    <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">
  </p>

  {{ form.errors | default_errors }}
{% endform %}
